@using EventTracker.BusinessModel.Menus
@model IEnumerable<EventTracker.BusinessModel.Menus.MenuItem>

<ul class="nav navbar-nav">
    <li><a href="#">Home</a></li>
    @foreach (var item in Model) {
        if (item.SubMenuItems!=null && item.SubMenuItems.Any()) {
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown"   aria-haspopup="true" aria-expanded="false" href="@item.NavigateUrl">@item.Name <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @foreach (var subMenuItem in item.SubMenuItems) {
                            <li><a href="@Url.Content("~/"+@subMenuItem.NavigateUrl)" title="@subMenuItem.Name">@subMenuItem.Name</a></li>
                        }
                        <li role="separator" class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                    </ul>
                </li>
        }
        else {
            <li><a href="@Url.Content("~/"+@item.NavigateUrl)">@item.Name</a></li>
        }
    }
</ul>



