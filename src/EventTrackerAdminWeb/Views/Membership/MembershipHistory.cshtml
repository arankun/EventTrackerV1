@model EventTracker.BusinessModel.Membership.MembershipHistoryViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel-body">

    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th class="text-right">
                Member Of
            </th>
            <th class="text-right">Start Date</th>
            <th class="text-right">End Date</th>
        </tr>
        @foreach (var item in Model.MembershipHistory) {
            <tr>
                <td class="text-right">@item.MemberOf</td>
                <td class="text-right">@item.StartDate</td>
                <td class="text-right">
                    @if (item.EndDate.HasValue) {
                        @item.EndDate.Value.ToString("{MM/dd/yyyy}")}
                </td>
            </tr>
        }
    </table>
                        <br/>
                        @using (@Html.BeginForm("UpdateMembership", "Membership", FormMethod.Post)) {
                            <div>
                                @Html.DropDownListFor(m => m.MemberOf, Model.MembershipOptions, new { @class = "form-control" })
                            </div>
                            <div class="modal-footer">
                                <button class="btn" type="button" data-dismiss="modal">Cancel</button>
                                <input class="btn btn-primary" type="submit" value="Add" />
                            </div>
                        }

</div>

